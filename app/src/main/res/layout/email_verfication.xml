<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".emailverification">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layup"
        android:layout_marginTop="20dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:onClick="back"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow" />

    <!-- Email Verification Text -->
    <TextView
        android:id="@+id/verification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textSize="24sp"
        android:layout_marginLeft="17dp"
        android:text="Email Verification"
        android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:id="@+id/line"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/layup"
        android:background="#33000000" />


    <!-- Text Label -->
    <TextView
        android:id="@+id/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="Enter the code sent to your email"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <!-- Text1 Label -->
    <TextView
        android:id="@+id/text1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="Resend code in 23s"
        android:textColor="#FF2222"
        android:layout_marginTop="10dp" />

    <!-- Input Boxes for Numbers (5 boxes) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1_label"
        android:id="@+id/lay1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center" />

        <EditText
            android:id="@+id/input_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center" />
        <EditText
            android:id="@+id/input_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center" />
        <EditText
            android:id="@+id/input_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center" />
        <EditText
            android:id="@+id/input_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:id="@+id/lay2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:id="@+id/lay3"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:id="@+id/lay4"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="7"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay4"
        android:id="@+id/lay5"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/circleb"
            android:text="0"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="90dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <Button
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:background="@drawable/circleb"
            android:text="X"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

    </LinearLayout>


</RelativeLayout>
