<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".videocall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- First Part (70%) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="#B3B3B3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lay_up"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/verification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textSize="24sp"
                    android:layout_marginLeft="30dp"
                    android:text="00:58"
                    android:onClick="photo"
                    android:clickable="true"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="15dp"
                    android:onClick="Login"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:background="@drawable/circle"
                    />
            </LinearLayout>

        </RelativeLayout>

        <!-- Second Part (30%) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lay_up1"
                android:layout_weight="2"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/mike"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="16dp"
                    android:onClick="back"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/mike" />


                <ImageButton
                    android:id="@+id/cam"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/stopcamera" />


                <!-- Shift Button -->
                <ImageButton
                    android:id="@+id/shift"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:onClick="back"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/shift" />

                <ImageButton
                    android:id="@+id/callcross"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:onClick="cross"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/callcross" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
